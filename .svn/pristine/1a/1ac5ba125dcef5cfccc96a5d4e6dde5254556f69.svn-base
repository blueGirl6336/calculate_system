	//处理查询的点击事件
	$("#queryStudent").click(function(event) {

		/* Act on the event */
		if ($("#inputId").val() == '' && $("#inputName").val() == '') {

     		layer.alert('请至少输入一个项目，亲！', {
			  skin: 'layui-layer-molv' 
			  ,closeBtn: 0
			  ,shift: 1
			});

		} else {
			if ($("#inputId").val() != '') {
				//构造json数据
				var d = {"username": $("#inputId").val()};
				//通过id查询
				searchStu(uById, d);
			} else if ($("#inputName").val() != '') {
				var d = {"studentName": $("#inputName").val()};
				//通过姓名查询
				searchStu(uByName, d);
			}
		}
